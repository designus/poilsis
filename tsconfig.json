{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "components": ["./src/client/app/components"],
      "helpers": ["./src/client/app/helpers"],
      "reducers": ["./src/client/app/reducers"],
      "actions": ["./src/client/app/actions"],
      "pages": ["./src/client/app/pages"],
      "data-strings": ["./src/client/app/data-strings"],
      "global-styles": ["./src/client/app/global-styles"]
    },
    "outDir": "./build",
    "module": "commonjs",
    "target": "es2015",
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "experimentalDecorators": true,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "jsx": "react",
    "moduleResolution": "node"
  },
  "exclude": [
    "./node_modules",
    "./build",
    "./typings/main",
    "./typings/main.d.ts"
  ],
  "include": [
    "./src/**/*"
  ],
  "typeRoots": [
    "./node_modules/@types"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useCache": true,
    "useBabel": true,
    "babelCore": "./node_modules/babel-core/index.js"
  }
}
