{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "components": ["./src/app/components"],
      "helpers": ["./src/app/helpers"],
      "reducers": ["./src/app/reducers"],
      "actions": ["./src/app/actions"],
      "pages": ["./src/app/pages"],
      "data-strings": ["./src/app/data-strings"]
    },
    "outDir": "build",
    "module": "commonjs",
    "target": "es2015",
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "experimentalDecorators": true,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "jsx": "react",
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "build",
    "typings/main",
    "typings/main.d.ts"
  ],
  "typeRoots": [
    "./node_modules/@types"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useCache": true,
    "useBabel": true
  }
}
