{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "paths": {
      "components": ["./src/client/app/components"],
      "components/*": ["./src/client/app/components/*"],
      "client-utils": ["./src/client/app/client-utils"],
      "client-utils/*": ["./src/client/app/client-utils/*"],
      "server-utils": ["./src/server/app/server-utils"],
      "server-utils/*": ["./src/server/app/server-utils/*"],
      "selectors": ["./src/client/app/selectors"],
      "reducers": ["./src/client/app/reducers"],
      "reducers/*": ["./src/client/app/reducers/*"],
      "actions": ["./src/client/app/actions"],
      "actions/*": ["./src/client/app/actions/*"],
      "pages": ["./src/client/app/pages"],
      "pages/*": ["./src/client/app/pages/*"],
      "types": ["./src/client/app/types"],
      "types/*": ["./src/client/app/types/*"],
      "data-strings": ["./src/data-strings"],
      "global-styles": ["./src/client/app/global-styles"],
      "global-utils": ["./src/global-utils"],
      "global-utils/*": ["./src/global-utils/*"],
      "data-models": ["./src/data-models"],
      "data-models/*": ["./src/data-models/*"],
      "config": ["./config"]
    },
    "lib": ["es2017", "dom", "es7", "dom.iterable"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    // Preserve dynamic import
    "module": "esnext",
    // Preserve React jsx syntax
    "jsx": "preserve",
    // Allow import X from "x"
    "allowSyntheticDefaultImports": true,
    // Find dependencies in node_modules
    "moduleResolution": "node",
    "incremental": true,
    // Full power of TypeScript with strict options enabled
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}
